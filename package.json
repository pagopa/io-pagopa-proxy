    "test:integration": "jest -i --config=jest.integration.js",
    "lint": "tslint --project ."
  },
  "devDependencies": {
    "@types/debug": "0.0.30",
    "@types/express": "^4.11.1",
    "@types/jest": "^22.2.2",
    "@types/morgan": "^1.7.35",
    "@types/node": "^8.9.4",
    "@types/supertest": "^2.0.4",
    "@types/winston": "^2.3.9",
    "@types/node-fetch": "^1.6.9",
    "@types/uuid": "^3.4.3",
    "danger": "^3.5.1",
    "danger-plugin-digitalcitizenship": "^0.2.0",
    "italia-pagopa-api": "https://github.com/teamdigitale/italia-pagopa-api#v0.0.5",
    "jest": "^22.4.3",
    "prettier": "^1.12.1",
    "supertest": "^3.0.0",
    "ts-jest": "^22.4.4",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.12.0",
    "tslint-immutable": "^4.5.4",
    "tslint-plugin-prettier": "^1.3.0",
    "tslint-sonarts": "^1.6.0",
    "typescript": "^2.8.3",
    "typestrict": "^0.0.8"
  },
  "dependencies": {
    "debug": "^3.1.0",
    "express": "^4.16.3",
    "fp-ts": "^1.3.0",
    "io-ts": "^1.0.5",
    "italia-pagopa-ts": "git+https://github.com/teamdigitale/italia-pagopa-api.git#v0.0.5",
    "italia-ts-commons": "^1.3.0",
    "morgan": "^1.9.0",
    "node-fetch": "^2.1.2",
    "querystring": "^0.2.0",
    "uuid": "^3.2.1",
    "winston": "^2.4.2"
  },
  "jest": {
    "collectCoverage": true,
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/__tests__/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "/mocks/"
    ]
  }
