{
  "name": "italia-pagopa-proxy",
  "version": "0.0.1",
  "description": "Proxy that handles interactions with pagoPA",
  "main": "index.ts",
  "repository": "https://github.com/teamdigitale/italia-pagopa-proxy",
  "author": "Sergio Manetta <sergio.manetta@it.ibm.com>",
  "license": "MIT",
  "scripts": {
    "build": "npm-run-all -s generate:proxy-api-models lint build:tsc",
    "build:tsc": "tsc",
    "clean": "rm -r ./dist",
    "generate:proxy-api-models": "rm -f ./src/types/api/* && gen-api-models --api-spec ./api_pagopa.yaml --out-dir ./src/types/api/ --ts-spec-file ./src/api/public_api_pagopa.ts",
    "prettify": "prettier --write './**/*.ts'",
    "start": "node dist/index.js",
    "test:unit": "jest --runInBand",
    "test:integration": "jest --config=jest.integration.js --runInBand",
    "test": "npm-run-all -s test:*",
    "lint": "tslint --project ."
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.20",
    "@types/debug": "0.0.30",
    "@types/express": "^4.11.1",
    "@types/jest": "^23.1.1",
    "@types/morgan": "^1.7.35",
    "@types/node": "^8.9.4",
    "@types/node-fetch": "^1.6.9",
    "@types/redis": "^2.8.6",
    "@types/supertest": "^2.0.4",
    "@types/uuid": "^3.4.3",
    "@types/winston": "^2.3.9",
    "danger": "^3.7.16",
    "danger-plugin-digitalcitizenship": "^0.3.1",
    "italia-tslint-rules": "^0.1.1",
    "italia-utils": "^3.11.1",
    "jest": "^23.2.0",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.13.5",
    "supertest": "^3.0.0",
    "ts-jest": "^22.4.6",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "tslint-immutable": "^4.5.4",
    "tslint-plugin-prettier": "^1.3.0",
    "tslint-sonarts": "^1.7.0",
    "typescript": "^2.9.1",
    "typestrict": "^0.0.9"
  },
  "dependencies": {
    "debug": "^3.1.0",
    "express": "^4.16.3",
    "fp-ts": "^1.3.0",
    "io-ts": "^1.0.5",
    "italia-pagopa-api": "^2.1.0",
    "italia-ts-commons": "^2.5.0",
    "morgan": "^1.9.0",
    "node-fetch": "^2.1.2",
    "querystring": "^0.2.0",
    "redis": "^2.8.0",
    "redis-clustr": "^1.6.0",
    "uuid": "^3.2.1", 
    "winston": "^2.4.2"
  },
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/__tests__/*.ts"
    ],
    "coverageDirectory": "./coverage/",
    "coveragePathIgnorePatterns": [
      "/mocks/"
    ]
  }
}
